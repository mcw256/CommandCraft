<UserControl x:Class="Grabcraft_Helper.Views.HomeStep1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Grabcraft_Helper.Views"
             mc:Ignorable="d"
             Background="{StaticResource MyGrayBackground}"
             Foreground="{StaticResource MyDimmedWhiteForeground}"
             FontFamily="{StaticResource Font SpaceMono Regular}"
             d:DesignHeight="450" d:DesignWidth="600">
    <Border BorderThickness="0" Padding="5">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="25">Minecraft function creator</TextBlock>
            <TextBlock FontSize="22">Step 1/3</TextBlock>
            <TextBlock FontSize="15" Margin="0 50 0 0">Paste Building URL</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBox MinWidth="400"/>
                <Button Content="Go" Margin="10 0 0 0" MinWidth="75"/>
            </StackPanel>
            <TextBlock FontFamily="{StaticResource Font SpaceMono Italic}" Margin="0 10 0 0">example: https://www.grabcraft.com/minecraft/pig-statue/farm-animals-1</TextBlock>
            
            
        </StackPanel>
        
        
        
    </Border>
</UserControl>
